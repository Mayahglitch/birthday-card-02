  <script>
    // Simple confetti implementation
    const confettiCanvas = document.getElementById('confetti');
    const ctx = confettiCanvas.getContext('2d');
    let confettiPieces = [];
    function resizeCanvas(){ confettiCanvas.width = confettiCanvas.clientWidth; confettiCanvas.height = confettiCanvas.clientHeight; }
    window.addEventListener('resize', resizeCanvas); resizeCanvas();

    function createConfetti(){
      confettiPieces = [];
      const count = 120;
      for(let i=0;i<count;i++){
        confettiPieces.push({x:Math.random()*confettiCanvas.width,y:Math.random()*-confettiCanvas.height*2, size:6+Math.random()*8, speed:2+Math.random()*4, rot:Math.random()*360, velX:(Math.random()-0.5)*2, color: `hsl(${Math.random()*360},80%,60%)`});
      }
      animateConfetti();
    }
    let confettiRunning = false;
    function animateConfetti(){
      if(confettiPieces.length===0){ confettiRunning=false; ctx.clearRect(0,0,confettiCanvas.width,confettiCanvas.height); return; }
      confettiRunning = true;
      ctx.clearRect(0,0,confettiCanvas.width,confettiCanvas.height);
      for(let p of confettiPieces){
        p.y += p.speed;
        p.x += p.velX;
        p.rot += p.speed;
        ctx.save();
        ctx.translate(p.x,p.y);
        ctx.rotate(p.rot*Math.PI/180);
        ctx.fillStyle = p.color;
        ctx.fillRect(-p.size/2,-p.size/2,p.size,p.size*0.6);
        ctx.restore();
      }
      confettiPieces = confettiPieces.filter(p=>p.y < confettiCanvas.height+50);
      requestAnimationFrame(animateConfetti);
    }

    document.getElementById('confettiBtn').addEventListener('click', ()=>{ createConfetti(); });

    // Simple WebAudio melody for 'Happy Birthday' short riff
    const AudioContext = window.AudioContext || window.webkitAudioContext;
    let audioCtx;
    function playMelody(){
      if(!audioCtx) audioCtx = new AudioContext();
      const now = audioCtx.currentTime;
      const osc = audioCtx.createOscillator();
      const gain = audioCtx.createGain();
      osc.type = 'sine';
      osc.connect(gain); gain.connect(audioCtx.destination);
      const notes = [392,392,440,392,523,494,392,392,440,392,587,523]; // a tiny happy-bday riff
      let t=0; gain.gain.setValueAtTime(0, now);
      osc.start(now);
      gain.gain.linearRampToValueAtTime(0.12, now+0.02);
      for(let i=0;i<notes.length;i++){
        const dur = i<6?0.28:0.32;
        osc.frequency.setValueAtTime(notes[i], now + t);
        t += dur;
      }
      gain.gain.linearRampToValueAtTime(0, now+t+0.2);
      osc.stop(now+t+0.25);
    }
    document.getElementById('playSong').addEventListener('click', ()=>{ playMelody(); });

    // Blow out candles
    const blowBtn = document.getElementById('blowBtn');
    blowBtn.addEventListener('click', ()=>{
      const flames = document.querySelectorAll('.flame');
      flames.forEach((f,i)=>{
        f.style.transition='transform 700ms ease, opacity 700ms ease';
        f.style.transform='scale(0.1) translateY(-6px)';
        f.style.opacity='0';
      });
      createConfetti();
      // recreate candle flames after 6s so user can blow again
      setTimeout(()=>{ flames.forEach(f=>{ f.style.transition='none'; f.style.transform='scale(1) translateY(0)'; f.style.opacity='1'; }); },6000);
    });

    // Download PNG of preview
    document.getElementById('downloadBtn').addEventListener('click', async ()=>{
      const container = document.getElementById('preview');
      const rect = container.getBoundingClientRect();
      // draw a lightweight snapshot using html2canvas-like approach (simple)
      // We'll draw balloons and cake manually to a canvas for a quick PNG.
      const out = document.createElement('canvas'); out.width = rect.width; out.height = rect.height;
      const octx = out.getContext('2d');
      // background
      octx.fillStyle = '#071126'; octx.fillRect(0,0,out.width,out.height);
      octx.fillStyle = '#ffffff'; octx.font='28px serif'; octx.fillText('Happy Birthday, Ziad üéâ',20,54);
      // export
      const url = out.toDataURL('image/png');
      const a = document.createElement('a'); a.href = url; a.download = 'ziad-birthday-card.png'; a.click();
    });

    // small: make canvas responsive
    (function loop(){
      if(confettiRunning){ /* animation running via requestAnimationFrame already */ }
      requestAnimationFrame(loop);
    })();
  </script>
</body>
</html>
